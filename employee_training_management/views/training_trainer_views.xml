<odoo>
    <!-- Action to open Training Courses filtered by trainer -->
    <record id="action_training_course_by_trainer" model="ir.actions.act_window">
        <field name="name">Training Courses</field>
        <field name="res_model">training.course</field>
        <field name="view_mode">list,form,kanban,calendar</field>
        <field name="domain">[('trainer_id','=',active_id)]</field>
        <field name="context">{'default_trainer_id': active_id}</field>
    </record>

    <!-- Trainer List View -->
    <record id="view_training_trainer_list" model="ir.ui.view">
        <field name="name">training.trainer.list</field>
        <field name="model">training.trainer</field>
        <field name="arch" type="xml">
            <list string="Trainers">
                <field name="name"/>
                <field name="expertise"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <!-- Trainer Form View with Smart Button -->
    <record id="view_training_trainer_form" model="ir.ui.view">
        <field name="name">training.trainer.form</field>
        <field name="model">training.trainer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(action_training_course_by_trainer)d"
                            type="action"
                            string="Training Courses"
                            class="oe_stat_button"
                            icon="fa-book">
                        <field name="course_count" widget="statinfo"/>
                    </button>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="expertise"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="employee_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
