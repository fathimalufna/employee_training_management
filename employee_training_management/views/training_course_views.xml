<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Training Course List View (no domain here) -->
    <record id="view_training_course_list" model="ir.ui.view">
        <field name="name">training.course.list</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <!-- removed many list attributes that cause issues -->
            <list string="Training Courses">
                <field name="name"/>
                <field name="trainer_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="duration_days"/>
                <field name="state" widget="statusbar"/>
            </list>
        </field>
        <!-- DO NOT put domain here; views don't accept domain field -->
    </record>

    <!-- Training Course Kanban View -->
    <record id="view_training_course_kanban" model="ir.ui.view">
        <field name="name">training.course.kanban</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_view">
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_image">
                                <img t-att-src="'/employee_training_management/static/description/icon.png'"/>
                            </div>
                            <div class="o_kanban_content">
                                <strong><field name="name"/></strong>
                                <div><field name="trainer_id"/></div>
                                <div><field name="start_date"/></div>
                                <div><field name="state"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Training Course Form View -->
    <record id="view_training_course_form" model="ir.ui.view">
        <field name="name">training.course.form</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <form string="Training Course">
                <header>
                    <field name="active" invisible="1"/>
                    <field name="state" widget="statusbar"/>
                    <button name="action_archive" type="object" string="Archive" invisible="not active"/>
                    <button name="action_unarchive" type="object" string="Unarchive" invisible="active"/>
                </header>
                <sheet>
                    <group string="General Info">
                        <field name="name"/>
                        <field name="description"/>
                        <field name="trainer_id"/>
                        <field name="state"/>
                    </group>
                    <group string="Schedule">
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="duration_days"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Training Course Calendar View -->
    <record id="view_training_course_calendar" model="ir.ui.view">
    <field name="name">training.course.calendar</field>
    <field name="model">training.course</field>
    <field name="arch" type="xml">
        <calendar string="Training Courses Calendar" date_start="start_date" color="state"/>
    </field>
</record>

    <!-- Training Course Graph View -->
    <record id="view_training_course_graph" model="ir.ui.view">
    <field name="name">training.course.graph</field>
    <field name="model">training.course</field>
    <field name="arch" type="xml">
        <graph string="Courses Analysis" type="bar">
            <field name="trainer_id" type="row"/>
            <field name="state" type="col"/>
            <field name="id" type="measure"/>
        </graph>
    </field>
</record>


    <!-- Training Course Search View -->
    <record id="view_training_course_search" model="ir.ui.view">
        <field name="name">training.course.search</field>
        <field name="model">training.course</field>
        <field name="arch" type="xml">
            <search string="Search Training Courses">
                <field name="name"/>
                <field name="trainer_id"/>
                <field name="state"/>

                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Ongoing" name="ongoing" domain="[('state','=','ongoing')]"/>
                <filter string="Completed" name="completed" domain="[('state','=','completed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state','=','cancelled')]"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="archived" domain="[('active','=',False)]"/>

                <group expand="1" string="Group By">
                    <filter string="Trainer" name="group_trainer" context="{'group_by':'trainer_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by':'state'}"/>
                </group>

            </search>
        </field>
    </record>

    <!-- Action to open Training Courses: put default domain & context here -->
    <record id="action_training_course" model="ir.actions.act_window">
        <field name="name">Training Courses</field>
        <field name="res_model">training.course</field>
        <field name="view_mode">list,kanban,form,calendar,graph</field>
        <!-- DEFAULT DOMAIN: shows only active courses -->
        <field name="domain">[('active','=',True)]</field>
        <!-- DEFAULT CONTEXT: default trainer for new records -->
        <field name="context">{'default_trainer_id': user.employee_id and user.employee_id.id or False}</field>
    </record>
</odoo>
